<?xml version="1.0"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="false">

<!-- 서블릿 선언 
    servlet-name: 서블릿의 별명
    servlet-class: javax.servlet.Servlet interface를 구현한 클래스명
                  패키지명+클래스명 이어야한다.
-->
  <servlet>
    <servlet-name>Hello</servlet-name>
    <servlet-class>java63.servlets.Hello</servlet-class> 
  </servlet>
  
  <servlet>
    <servlet-name>Hello2</servlet-name>
    <servlet-class>java63.servlets.Hello2</servlet-class> 
  </servlet>
  

<!-- 서블릿에 URL을 부여하자 
    =>클라이언트는 이 URL을 사용하여 서블릿의 실행을 요청한다.
    =>servlet-name : 위의 <servlet>태그에서 선언한 서블릿의 별명
    =>url-pattern : 클라이언트가 요청할 때 사용할 서블릿 주소
           ex)  http://localhost:8080/webapp이름/okok/nono/hi
-->
    
   <servlet-mapping>
    <servlet-name>Hello</servlet-name>
    <url-pattern>/Hello</url-pattern>
   </servlet-mapping>
   
    <servlet-mapping>
    <servlet-name>Hello2</servlet-name>
    <url-pattern>/Hello2</url-pattern>
   </servlet-mapping>
   

</web-app>
